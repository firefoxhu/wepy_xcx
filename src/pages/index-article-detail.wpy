<template>

  <view class="container">
    <view class="article">
        <view class="title">
            <text>{{article.title}}</text>
        </view>
        <view class="source">
            <text>{{article.resource}}</text>
        </view>

        <view class="content">
            <import src="../wxParse/wxParse.wxml"/>
            <template is="wxParse" data="{{wxParseData:content.nodes}}"/>
        </view>
    </view>

    <view class="interaction">
        <view class="fabulous">
           <a class="views">üëÄ({{article.views}})</a>
           <a style=" {{fabulous ? ' border:2rpx solid peru;' : ''}}" class="zan" @tap="fabulous">üëç({{article.fabulous}})</a>
        </view>

        <view class="comment">
           <text class="title">‚Äî‚Äî‚Äî‚Äî‚ÄîÁΩëÂèãÁïôË®Ä‚Äî‚Äî‚Äî‚Äî‚Äî‚Äî</text>
            <view class="comment-list">
                <view class="item" wx:for="{{commentList.list}}" wx:key="{{index}}">
                    <i class="iconfont icon-niming" style="font-size: 100rpx;color:#888888;"></i>
                    <view class="comment-box">
                        <text class="nickname">{{item.commentator}}</text>
                        <view class="content">
                            <text>{{item.content}}</text>
                        </view>
                        <view class="location">
                            <view class="address">
                                <i class="iconfont icon-dizhi1"/>
                                <text>‰ø°Èò≥Â∏ÇÔºàÈªòËÆ§Ôºâ</text>
                            </view>
                            <view>{{item.createTime}}</view>
                        </view>
                    </view>
                </view>
                <view class="loading">
                    <text>{{commentList.loading.tip}}</text>
                </view>
            </view>
        </view>
    </view>
    <view style="height:50px;"></view>
    <view class="comment-panel">
        <textarea cursor-spacing="20" placeholder="üìùËØ∑ÂÜô‰∏ÄÂè•ËØùÁïôË®ÄÂêßÔºÅÔºà3‰∏™Â≠ó‰ª•‰∏ä„ÄÇÔºâ" placeholder-style="font-size:14px;" auto-height maxlength="256" fixed="true" bindinput="inputValue" />
        <a @tap="comment" class="send">ÂèëË°®</a>
    </view>

    <image wx:if="{{goIndex}}" @tap="back" class="back" src="/assets/images/back.png"/>

  </view>
</template>

<script>
  import wepy from 'wepy'
  import req from '@/network'
  import { baseUrl2 } from '@/config/index'
  var WxParse = require('../wxParse/wxParse.js');
  export default class IndexArticleDetail extends wepy.page {
    
    config = {
      navigationBarTitleText: 'ËØ¶ÊÉÖ',
    }

    data = {
        fabulous: false,
        article: null,
        comment: '',
        previewImage:[],
        commentList:{
           page:{
                index: 0,
                size:6
            },
            loading: {
                hasMore: true,
                tip: 'Êï∞ÊçÆÂä†ËΩΩ‰∏≠...'
            },
            list:null
        },
        goIndex: false

    }

    methods = {
        back() {
            wx.reLaunch({
                url: '/pages/index'
            })
        },
        inputValue(e){
            this.comment = e.detail.value
        },
        comment(){
            if(this.comment.length < 3) {
                wx.showToast({
                    title: this.comment.length === 0 ? 'Á©∫Á©∫Â¶Ç‰πüÔºåÂÜô2‰∏™Â≠óÂêßÔºÅ':'ËØ∑ËæìÂÖ•ÂêàÊ≥ïÂæóÂ≠óÁ¨¶ÈïøÂ∫¶ÔºÅ',
                    icon: 'none',
                    duration: 1200
                })
                return
            }
            wx.showLoading({
                title: 'Ê≠£Âú®ÂèëË°®‰∏≠...',
                mask: true
            })


            req.post(baseUrl2+"comment/article",{id:this.article.id,content:this.comment}).then(res => {
                wx.hideLoading()

                if( res.code === 0){
                    this.commentList.list.unshift(res.data)
                    this.comment = ''
                    this.$apply()
                    wx.showToast({
                        title: 'ÂèëË°®ÊàêÂäüÔºÅ',
                        icon: 'success',
                        duration: 1200
                    })
                } else {
                    wx.showToast({
                        title: '‰∏çÊîØÊåÅË°®ÊÉÖÁ¨¶Âè∑üòÅ',
                        icon: 'none',
                        duration: 1200
                    })
                }

                
            })


        },
        wxParseImgTap(e){
            if(this.previewImage.length === 0)return

            wx.previewImage({
                current: e.currentTarget.dataset.src,
                urls: this.previewImage
            })
        },
        wxParseImgLoad(e){
            this.previewImage.push(e.target.dataset.src)
        },
        fabulous(){
            if(!this.fabulous) {
                this.article.fabulous =Number(this.article.fabulous) + 1

                // rquest fabulous +1
                req.get(baseUrl2+"news/fabulous",{id:this.article.id}).then(res => {
                    if( res.code === 0){
                        wx.setStorage({
                            key: "F"+this.article.id,
                            data:"mark"
                        })
                        this.fabulous = true
                        this.$apply()
                    }
                })
            }
            
        }

    }

    onLoad(params, data) {

        // Â¶ÇÊûú‰ªéÂàÜ‰∫´ËøõÂÖ•ÂàôË∞É
        if(data.preload === undefined) {
            this.goIndex = true
            req.get(baseUrl2+'news/detail',{id:params.id}).then(res =>{
                this.initData(res.data)
            })
            return
        }
        // fetch cache data 
        this.initData(data.preload.article)

    }

    onReachBottom() {
      // more comments
      this.nextComment()
    }

    onShareAppMessage(options) {
        return {
            title: this.article.title,
            path: '/pages/index-article-detail?id='+this.article.id,
            imageUrl:this.article.images[0]
        }
    }

    initData(data) {
        this.article = data
        // parse html to wxml
        WxParse.wxParse('content', 'html', this.article.content, this,5);

        // fetch fabulous cache status
        wx.getStorage({
            key: "F"+this.article.id,
            success:(res)=>{
                this.fabulous = true
            },
            fail:(res)=>{
                this.fabulous = false
            },
            complete:(res)=>{

            }
        })

        // init  comments data
        this.initComment()

    }

    initComment() {
        req.get(baseUrl2+'comment/list',{page:0,size:this.commentList.page.size,id:this.article.id}).then(res => {
            if(res.code === 0) {
                // init
                this.commentList.list = res.data.list
                this.commentList.loading.hasMore = res.data.hasNext
                this.commentList.loading.tip = res.data.list.length === 0 ? 'ÊöÇÊó†ËØÑËÆ∫ÔºåÊä¢‰∏™Ê≤ôÂèë~' : (res.data.hasNext ? 'ËØÑËÆ∫Âä†ËΩΩ‰∏≠...' : 'Ê≤°ÊúâÊõ¥Â§öËØÑËÆ∫‰∫Ü~')
                this.$apply()
            }
        })
    }

    nextComment() {
      if(!this.commentList.loading.hasMore){
        return
      }
      req.get(baseUrl2+'comment/list',{page:++this.commentList.page.index,size:this.commentList.page.size,id:this.article.id}).then(res => {
        if(res.code === 0) {
          // append
          this.commentList.list = this.commentList.list.concat(res.data.list)
          this.commentList.loading.hasMore = res.data.hasNext
          this.commentList.loading.tip = res.data.list.length === 0 ? 'ÊöÇÊó†ËØÑËÆ∫ÔºåÊä¢‰∏™Ê≤ôÂèë~' : (res.data.hasNext ? 'ËØÑËÆ∫Âä†ËΩΩ‰∏≠...' : 'Ê≤°ÊúâÊõ¥Â§öËØÑËÆ∫‰∫Ü~')
          this.$apply()
        }
      })
    }

  }
</script>
